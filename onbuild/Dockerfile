FROM nguyenminhtienitvn/meteord:node-12.20.0-base
MAINTAINER Tien Nguyen

ARG NODE_VERSION
ENV NODE_VERSION ${NODE_VERSION:-12.20.0}
ONBUILD ENV NODE_VERSION ${NODE_VERSION:-12.20.0}

ONBUILD COPY ./ /app
ONBUILD RUN bash $METEORD_DIR/lib/install_meteor.sh
ONBUILD RUN bash $METEORD_DIR/lib/build_app.sh
